
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
</head>
<body>
    <div> 
        @using (Html.BeginForm("Login","UserLogin",FormMethod.Post))
        {
            <table>
                <tr>
                    <td>
                        @Html.Label("UserName")
                    </td>
                    <td>
                        @Html.TextBox("txtUserName")
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.Label("Password")
                    </td>
                    <td>
                        @Html.TextBox("txtPassword")
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        <input type="submit" value="Login" />
                    </td>
                </tr>
            </table>


        }
    </div>
</body>
</html>
